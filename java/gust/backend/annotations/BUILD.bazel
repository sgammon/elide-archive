package(
    default_visibility = ["//visibility:public"],
)

load(
    "//defs/toolchain:deps.bzl",
    "maven",
)

load(
    "//defs/toolchain/java:rules.bzl",
    java_library = "jdk_library",
)

load(
    "//defs/toolchain:deps.bzl",
    "javaproto",
)

_COMMON_DEPS = [
    "@com_google_code_findbugs_jsr305",
    maven("io.micronaut:micronaut-aop"),
]


java_library(
    name = "Js",
    srcs = ["Js.java"],
    deps = [
        # None yet.
    ] + _COMMON_DEPS,
)

java_library(
    name = "Style",
    srcs = ["Style.java"],
    deps = [
        # None yet.
    ] + _COMMON_DEPS,
)

java_library(
    name = "Page",
    srcs = ["Page.java"],
    deps = [
        javaproto("//java/gust/backend/builtin:sitemap_proto"),
    ] + _COMMON_DEPS,
)


java_library(
    name = "annotations",
    exports = [
        ":Js",
        ":Page",
        ":Style",
    ]
)

filegroup(
    name = "sources",
    srcs = glob(["*.java"]),
)
